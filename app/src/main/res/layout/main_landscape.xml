<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <FrameLayout android:id="@+id/top_HUD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout android:id="@+id/root_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ImageView android:id="@+id/skin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/skin_top"/>
    </FrameLayout>

    <FrameLayout android:id="@+id/bottom_HUD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/skin_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/skin_bottom" />

        <LinearLayout android:id="@+id/objective"
            android:layout_width="@dimen/game_ui_text_box_objective_width_bottom_land"
            android:layout_height="@dimen/game_ui_text_box_height_bottom_land"
            android:layout_marginLeft="@dimen/game_ui_objective_left_margin_land"
            android:layout_gravity="bottom|left"
            android:orientation="vertical">

            <TextView android:id="@+id/objective_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/game_ui_objective_text_margin_top_land"
                android:textSize="@dimen/game_ui_text_size_bottom_land"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/score"
            android:layout_width="@dimen/game_ui_text_box_score_width_bottom_land"
            android:layout_height="@dimen/game_ui_text_box_height_bottom_land"
            android:layout_marginRight="@dimen/game_ui_score_right_margin_land"
            android:layout_marginBottom="@dimen/game_ui_bottom_text_margin_bottom_land"
            android:layout_gravity="bottom|right"
            android:orientation="vertical">

            <TextView android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/game_ui_score_text_margin_top_land"
                android:textSize="@dimen/game_ui_text_size_bottom_land"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
